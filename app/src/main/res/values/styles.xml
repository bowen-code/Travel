<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTitleTheme" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomTitleBackgroundStyle</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>

    </style>

    <style name="CustomTitleBackgroundStyle">
        <item name="android:background">@color/title_layout</item>
    </style>

</resources>
